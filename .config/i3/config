# app launcher mode
set $app_launcher Launch: [v]ivaldi [r]anger [p]cmanfm [Shift+t]mcbeans
mode "app launcher" {
    bindsym v exec vivaldi-stable, mode "default"
    bindsym r exec ranger, mode "default"
    bindsym p exec pcmanfm, mode "default"
    bindsym Shift+t exec tmcbeans, mode "default"
    
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+bar mode "$app_launcher" 


# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym h resize shrink width 10 px or 10 ppt
        bindsym j resize grow height 10 px or 10 ppt
        bindsym k resize shrink height 10 px or 10 ppt
        bindsym l resize grow width 10 px or 10 ppt
        #bindsym l resize grow width 10 px or 10 ppt; resize grow height 10 px or 10 ppt
        #bindsym h resize shrink width 10 px or 10 ppt; resize shrink height 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape or $mod+r
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+p mode "default"
}

bindsym $mod+r mode "resize"

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
    id bar-0
    mode dock
    status_command SCRIPT_DIR=~/.config/i3blocks i3blocks
    #status_command i3status
    position bottom
    font pango:Fira Code Nerd Font bold 10
    separator_symbol "|"
    workspace_buttons yes
    strip_workspace_numbers no
    strip_workspace_name yes
    binding_mode_indicator yes
    tray_padding 0
    tray_output HDMI1
    tray_output primary
    colors {
        background #282828
        statusline #ebdbb2
        separator  #665c54
        #                  border  bgcolor   text
        focused_workspace  #ebdbb2 #ebdbb2 #1d2021
        active_workspace   #1d2021 #1d2021 #ebdbb2
        inactive_workspace #1d2021 #1d2021 #ebdbb2
        urgent_workspace   #cc241d #cc241d #1d2021
        binding_mode       #cc241d #cc241d #1d2021
    }
}

workspace $ws5 output HDMI1
workspace $ws7 output primary
workspace $ws9 output HDMI1

# switch to workspace
bindsym $mod+a          workspace number $ws1
bindsym $mod+o          workspace number $ws2
bindsym $mod+e          workspace number $ws3
bindsym $mod+u          workspace number $ws4
bindsym $mod+semicolon  workspace number $ws5
bindsym $mod+comma      workspace number $ws6
bindsym $mod+period     workspace number $ws7
bindsym $mod+p          workspace number $ws8
bindsym $mod+y          workspace number $ws9

# move focused container to workspace

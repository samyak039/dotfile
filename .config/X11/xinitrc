#!/bin/sh

xrdb -merge $XDG_CONFIG_HOME/X11/Xresources

# start some nice programs
if [ -d /etc/X11/xinit/xinitrc.d ] ; then
	for f in /etc/X11/xinit/xinitrc.d/?*.sh ; do
		[ -x "$f" ] && . "$f"
	done
	unset f
fi

# priority
dwmblocks &

# as root

# start scripts
set-display
set-keymap && sxhkd &
sort_download_dir &

# start background application
connman-gtk &
flameshot &
/usr/lib/kdeconnectd &
#mpDris2 &
#mpd &
pcmanfm -d &
redshift &
syncthing --no-browser &
transmission-daemon &
unclutter --timeout 3 --ignore-scrolling &
#xmobar {$CONFIG:-$HOME/.config}/xmonad/xmobarrc &

# start WM
exec dwm 2> $CACHE/dwm.log
#exec i3
#exec xmonad

#!/bin/sh

xrdb -merge $XDG_CONFIG_HOME/X11/Xresources

# start some nice programs
if [ -d /etc/X11/xinit/xinitrc.d ] ; then
	for f in /etc/X11/xinit/xinitrc.d/?*.sh ; do
		[ -x "$f" ] && . "$f"
	done
	unset f
fi

#########################
# priority applications #
#########################
dwmblocks &

###########
# scripts #
###########
set-display
set-keymap && sxhkd &
sort_download_dir &

##########################
# background application #
##########################
# cmst &
# discord --start-minimized &
dunst &
easyeffects --gapplication-service &
emacs --daemon &
flameshot &
/usr/lib/kdeconnectd &
# mpDris2 &
nm-applet &
pcmanfm -d &
redshift &
syncthing --no-browser &
transmission-daemon &
unclutter --timeout 3 --ignore-scrolling &

#############
# huge apps #
#############
DeskTime &
ticktick &
morgen &
# thunderbird-beta

##################
# Window Manager #
##################
exec dwm 2>> $CACHE/dwm.log

# exec xmonad 2>> $CACHE/xmonad.log

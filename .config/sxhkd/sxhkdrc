#    killall -SIGUSR1 dunst
#super + shift + backslash
#    killall -SIGUSR2 dunst

# hyper keybinding / application keybinding
hyper + period
    $TERMINAL -t lf -e lf
hyper + Return
    $TERMINAL
hyper + a
    pavucontrol
    #$TERMINAL -t ncpamixer -e ncpamixer
hyper + b
    firefox-developer-edition -P profile
hyper + shift + b
    brave-beta --profile-directory="Default"
hyper + c
    qalculate-gtk
#hyper + d
#    dmenu_run_history_i -l 20 -c -bw 3 -p 'run'
hyper + d
    discord
hyper + e
    $TERMINAL -t neovim -e tmux new -s neovim
hyper + shift + e
    emacsclient -c -s doom -a 'emacs --fg-daemon'
hyper + alt + e
    emacsclient -s doom --eval "emacs-everywhere"
hyper + f
    ferdium
hyper + g
    gentleman
hyper + h
    $TERMINAL -t btop -e btop
hyper + k
    keepassxc
hyper + m
    morgen
hyper + p
    pcmanfm
hyper + r
    $TERMINAL -t tremc -e tremc -X
hyper + s
    spotify-tray
hyper + t
    kotatogram-desktop
# hyper + v
#     vscodium
hyper + w
    whatsie

# restart scripts or daemon
alt + shift + control + s
    killnotify sxhkd "config reloaded" && sxhkd &
alt + shift + control + d
    killnotify dwm "dwm restarted"

# KEYBOARD LAYOUT
shift + F1
    set-keymap ; notify-send -a 'Keyboard Layout' 'DVORAK'
shift + F2
    setxkbmap in eng ; notify-send -a 'Keyboard Layout' 'QWERTY'

# DISPLAY
shift + F6
    pkill -USR1 redshift
shift + F7
    set-display


#!/bin/sh

_usage="
$(basename $0) is a dmenu script to open any man page you want.
"
[[ $1 = '-h' ]] && echo "$_usage" &&  exit ;

_dmenu="dmenu -l 20 -c -bw 3 -p man"
_open="$TERMINAL -e man"
_config=$(man -k . | rg '\(1\)' | shuf | $_dmenu | awk '{print $1}')

[[ -n $_config ]] && eval "$_open $_config"
